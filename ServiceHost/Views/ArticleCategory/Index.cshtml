@using MyKalaShopQuery.Contracts.ArticleCategory
@model ArticleCategoryQueryView

@{
    ViewData["Title"] = "مقالات";
}

<!--====================  breadcrumb area ====================-->
<div class="breadcrumb-area section-space--half">
    <div class="container wide">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-wrapper breadcrumb-bg">
                    <div class="breadcrumb-content">
                        <h2 class="breadcrumb-content__title">@Model.Name</h2>
                        <ul class="breadcrumb-content__page-map">
                            <li>
                                <a asp-controller="Home" asp-action="Index">صفحه اصلی</a>
                            </li>
                            <li class="active">@Model.Name</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!--====================  End of breadcrumb area  ====================-->
<!--====================  page content area ====================-->
<div class="page-content-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="page-wrapper">
                    <div class="page-content-wrapper">
                        <div class="row">
                            <div class="col-lg-9 order-1 order-lg-1">
                                <!--=======  blog page content  =======-->
                                <div class="blog-page-content">
                                    <div class="row">
                                        @foreach (var article in Model.Articles)
                                        {
                                            <div class="col-md-6">
                                                <!--=======  single blog post  =======-->
                                                <div class="single-blog-post">
                                                    <div class="single-blog-post__image">
                                                        <a asp-controller="Article" asp-action="Details" asp-route-slug="@article.Slug">
                                                            <img src="~/UploadedFiles/@article.PicturePath"
                                                             class="img-fluid" alt="@article.PictureAlt" title="@article.PictureTitle">
                                                        </a>
                                                    </div>
                                                    <div class="single-blog-post__content">
                                                        <h3 class="title">
                                                            <a asp-controller="Article" asp-action="Details" asp-route-slug="@article.Slug">
                                                                @article.Title
                                                            </a>
                                                        </h3>
                                                        <p class="post-meta">
                                                            <span class="date">@article.PublishDate</span>
                                                            @*<span class="separator">|</span> by <a href="#">HasTech</a>*@
                                                        </p>
                                                        <p class="short-desc">
                                                            @article.ShortDescription
                                                        </p>
                                                        <a asp-controller="Article" asp-action="Details" asp-route-slug="@article.Slug"
                                                       class="blog-post-link">خواندن بیشتر</a>
                                                    </div>
                                                </div>
                                                <!--=======  End of single blog post  =======-->
                                            </div>
                                        }
                                    </div>
                                </div>
                                <div class="pagination-area">
                                    @*<div class="pagination-area__left">
                                    Showing 1 to 9 of 11 (2 Pages)
                                    </div>
                                    <div class="pagination-area__right">
                                    <ul class="pagination-section">
                                    <li>
                                    <a class="active" href="#">1</a>
                                    </li>
                                    <li>
                                    <a href="#">2</a>
                                    </li>
                                    <li>
                                    <a href="#">></a>
                                    </li>
                                    <li>
                                    <a href="#">>|</a>
                                    </li>
                                    </ul>
                                    </div>*@
                                </div>
                            </div>
                            <div class="col-lg-3 order-2 order-lg-2">
                                <div class="page-sidebar-wrapper">
                                    <!--=======  single sidebar widget  =======-->
                                    @await Component.InvokeAsync("ArticleCategories")
                                    <!--=======  End of single sidebar widget  =======-->
                                    <!--=======  single sidebar widget  =======-->
                                    @await Component.InvokeAsync("LatestArticles")
                                    <!--=======  End of single sidebar widget  =======-->
                                    <!--=======  single sidebar widget  =======-->
                                    <div class="single-sidebar-widget">
                                        <h4 class="single-sidebar-widget__title">تگ ها</h4>
                                        <ul class="single-sidebar-widget__tag-list">
                                            @foreach (var keyword in Model.KeywordsList)
                                            {
                                                <li>
                                                    <a asp-controller="Product" asp-action="Search" asp-route-key="@keyword">@keyword</a>
                                                </li>
                                            }
                                        </ul>
                                    </div>
                                    <!--=======  End of single sidebar widget  =======-->
                                </div>
                                <!--=======  End of page sidebar wrapper  =======-->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!--====================  End of page content area  ====================-->