@using MyKalaShopQuery.Contracts.Article
@model List<ArticleQueryView>

<div class="single-sidebar-widget">
    <h4 class="single-sidebar-widget__title">آخرین مقالات</h4>
    <div class="block-container">
        @foreach (var article in Model)
        {
            <div class="single-block d-flex">
                <div class="image">
                    <a asp-controller="Article" asp-action="Details" asp-route-slug="@article.Slug">
                        <img src="~/UploadedFiles/@article.PicturePath"
                            class="img-fluid" alt="@article.PictureAlt" title="@article.PictureTitle">
                    </a>
                </div>
                <div class="content">
                    <p>
                        <a href="blog-post-image-format.html">
                            @article.Title
                        </a>
                        <span>@article.PublishDate</span>
                    </p>
                </div>
            </div>
        }
    </div>
</div>