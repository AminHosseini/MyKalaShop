@using AccountManagement.Application.Contracts.Account
@model ResetPassword

@{
    ViewData["Title"] = "تغییر رمز عبور";
}

<!--====================  breadcrumb area ====================-->
<div class="breadcrumb-area section-space--half">
    <div class="container wide">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-wrapper breadcrumb-bg">
                    <div class="breadcrumb-content">
                        <h2 class="breadcrumb-content__title">تغییر رمز عبور</h2>
                        <ul class="breadcrumb-content__page-map">
                            <li><a asp-controller="Home" asp-action="Index">صفحه اصلی</a></li>
                            <li class="active">تغییر رمز عبور</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!--==================== end of breadcrumb area ====================-->
<!--====================  page content area ====================-->
<div class="page-content-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="page-wrapper">
                    <div class="page-content-wrapper">
                        <div class="row">
                            <div class="col-sm-12 col-md-12 col-lg-12 col-xs-12">
                                <form asp-controller="Account" asp-action="ResetPassword" method="post">
                                    <div class="login-form">
                                        <div class="row">
                                            <div class="col-md-6 col-12 mb-20">
                                                <label asp-for="NewPassword">رمز عبور جدید</label>
                                                <input asp-for="NewPassword" placeholder="لطفا رمز عبور جدید خودرا وارد کنید.">
                                                <span asp-validation-for="NewPassword"></span>
                                            </div>
                                            <div class="col-md-6 col-12 mb-20">
                                                <label asp-for="ReNewPassword">ورود مجدد رمز عبور جدید</label>
                                                <input asp-for="ReNewPassword" placeholder="لطفا رمز عبور جدید خودرا مجددا وارد کنید.">
                                                <span asp-validation-for="ReNewPassword"></span>
                                            </div>
                                            <input type="hidden" asp-for="Id" />
                                            <input type="hidden" asp-for="RedirectionTime" />
                                            <div class="col-12">
                                                <button class="register-button mt-0">ذخیره</button>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!--==================== end of page content area ====================-->