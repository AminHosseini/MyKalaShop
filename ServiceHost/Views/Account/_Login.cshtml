@using AccountManagement.Application.Contracts.Account
@model LoginViewModel

<div class="col-sm-12 col-md-12 col-xs-12 col-lg-6">
    <form asp-controller="Account" asp-action="Login">
        <div class="login-form">
            <h4 class="login-title">ورود</h4>
            <div class="row">
                <div class="col-md-12 col-12">
                    <label asp-for="UserName">نام کاربری*</label>
                    <input asp-for="UserName" placeholder="نام کاربری">
                </div>
                <div class="col-12">
                    <label asp-for="Password">رمز عبور</label>
                    <input asp-for="Password" placeholder="رمز عبور">
                </div>
                <div class="col-sm-6 text-right text-sm-left">
                    <a asp-controller="Account" asp-action="ForgotPassword" class="forget-pass-link"> رمز عبور خود را فراموش کرده اید؟</a>
                </div>
                <div class="col-md-12">
                    <button class="register-button">ورود</button>
                </div>
            </div>
        </div>
    </form>
</div>