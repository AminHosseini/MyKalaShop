@using MyKalaShopQuery.Contracts.ProductCategory
@model List<ProductCategoryQueryView>

<div class="category-area section-space">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <!--=======  category wrapper  =======-->
                <div class="category-wrapper">
                    <div class="row row-10">
                        <!--=======  single category item  =======-->
                        @foreach (var item in Model)
                        {
                            <div class="col-lg-4 col-sm-6 grid-item">
                                <div class="single-category-item">
                                    <div class="single-category-item__image">
                                        <a asp-controller="ProductCategory" asp-action="Index" asp-route-slug="@item.Slug">
                                            <img src="~/UploadedFiles/@item.PicturePath" class="img-fluid" alt="@item.PictureAlt" title="@item.PictureTitle">
                                        </a>
                                    </div>
                                    <div class="single-category-item__content">
                                        <h3 class="title">@item.Name</h3>
                                    </div>
                                </div>
                            </div>
                        }
                        <!--=======  End of single category item  =======-->
                    </div>
                </div>
                <!--=======  End of category wrapper  =======-->
            </div>
        </div>
    </div>
</div>