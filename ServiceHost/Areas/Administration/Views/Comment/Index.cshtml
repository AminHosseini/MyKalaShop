@using CommentManagement.Application.Contracts.Comment
@model List<CommentViewModel>

@{
    ViewData["Title"] = "مدیریت کامنت ها";
}

<div class="row">
    <div class="col-sm-12">
        <h4 class="page-title pull-right">@ViewData["Title"]</h4>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">جستجو در کامنت ها</h3>
            </div>
            <div class="panel-body">
                <partial name="_IndexSearchSection" model="new SearchComment()" />
            </div>
        </div>
    </div>
</div>

@if (!string.IsNullOrWhiteSpace(ViewBag.ErrorMessage))
{
    <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
}

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">لیست کامنت ها</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <table id="datatable" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>نام</th>
                                    <th>ایمیل</th>
                                    <th>پیام</th>
                                    <th>تاریخ</th>
                                    <th>وضعیت</th>
                                    <th>عملیات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td>@item.Name</td>
                                        <td>@item.Email</td>
                                        <td>@item.Message</td>
                                        <td>@item.CreationDate</td>
                                        <td class="text-center">
                                            @if (item.IsCanceled)
                                            {
                                                <span class="text-danger">کنسل شده</span>
                                            }
                                            else if (item.IsConfirmed)
                                            {
                                                <span class="text-success">تایید شده</span>
                                            }
                                            else if (!item.IsConfirmed && !item.IsCanceled)
                                            {
                                                <span class="text-warning">در انتظار</span>
                                            }
                                        </td>
                                        <td>
                                            @if (!item.IsCanceled)
                                            {
                                                <a class="btn btn-danger pull-right m-rl-5" asp-action="Cancel" asp-route-id="@item.Id">کنسل</a>
                                            }
                                            @if (!item.IsConfirmed && !item.IsCanceled)
                                            {
                                                <a class="btn btn-success pull-right m-rl-5" asp-action="Confirm" asp-route-id="@item.Id">تایید</a>
                                            }
                                            @if (item.IsCanceled)
                                            {
                                                <span>عملیاتی موجود نیست</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>