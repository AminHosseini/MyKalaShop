@using InventoryManagement.Application.Contracts.Inventory
@model List<InventoryOperationsLog>

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title">سوابق گردش انبار</h4>
</div>

<div class="modal-body">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>#</th>
                <th>تعداد</th>
                <th>تاریخ</th>
                <th>عملیات</th>
                <th>موجودی فعلی</th>
                <th>عملگر</th>
                <th>توضیحات</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var operation in Model)
            {
                <tr class="text-white @(operation.Added ? "bg-success" : "bg-danger")">
                    <td>@operation.Id</td>
                    <td>@operation.Count</td>
                    <td>@operation.CreationDate</td>
                    <td>
                        @if (operation.Added)
                        {
                            <span>افزایش</span>
                        }
                        else
                        {
                            <span>کاهش</span>
                        }
                    </td>
                    <td>@operation.CurrentCount</td>
                    <td>@operation.OperatorName</td>
                    <td>@operation.Description</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="modal-footer">
    <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">بستن</button>
</div>