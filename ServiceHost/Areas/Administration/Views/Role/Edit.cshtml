@using AccountManagement.Application.Contracts.Role
@model EditRole

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">ویرایش نقش : @Model.Name</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <form method="post">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Name" class="control-label">نام</label>
                                        <input type="text" class="form-control" asp-for="Name">
                                        <span asp-validation-for="Name" class="error"></span>
                                    </div>
                                </div>
                            </div>
                            <input type="hidden" asp-for="Id" />
                            <button type="submit" class="btn btn-info waves-effect waves-light">ذخیره</button>
                            <a asp-action="Index" class="btn btn-default waves-effect waves-dark m-b-5">بازگشت</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>