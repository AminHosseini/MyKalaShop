@using BlogManagement.Application.Contracts.Article
@model SearchArticle

<form class="form-inline" role="form" method="get">
    <div class="form-group">
        <label asp-for="Title" class="sr-only"></label>
        <input asp-for="Title" class="form-control" placeholder="عنوان مقاله">
    </div>
    <div class="form-group">
        <label asp-for="ArticleCategoryId" class="sr-only"></label>
        <select asp-for="ArticleCategoryId" class="form-control" asp-items="@ViewBag.ArticleCategories">
            <option value="0">گروه مقاله...</option>
        </select>
    </div>
    <button type="submit" class="btn btn-success waves-effect waves-light m-l-10">جستجو</button>
    <a class="btn btn-primary waves-effect waves-light m-l-10" asp-action="Index">مشاهده همه</a>
</form>