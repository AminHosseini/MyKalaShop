@using ShopManagement.Application.Contracts.Product
@model SearchProduct

<form class="form-inline" role="form" method="get">
    <div class="form-group">
        <label asp-for="Name" class="sr-only"></label>
        <input asp-for="Name" class="form-control" placeholder="نام محصول">
    </div>
    <div class="form-group">
        <label asp-for="Code" class="sr-only"></label>
        <input asp-for="Code" class="form-control" placeholder="کد محصول">
    </div>
    <div class="form-group">
        <label asp-for="ProductCategoryId" class="sr-only"></label>
        <select asp-for="ProductCategoryId" class="form-control" asp-items="@ViewBag.ProductCategories">
            <option value="0">گروه محصولی...</option>
        </select>
    </div>
    <button type="submit" class="btn btn-success waves-effect waves-light m-l-10">جستجو</button>
    <a class="btn btn-primary waves-effect waves-light m-l-10" asp-action="Index">مشاهده همه</a>
</form>