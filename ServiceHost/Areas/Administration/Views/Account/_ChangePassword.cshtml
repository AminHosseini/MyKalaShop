@using AccountManagement.Application.Contracts.Account
@model ChangePassword

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title">تغییر رمز عبور</h4>
</div>

<form asp-action="ChangePassword"
      method="post"
      data-ajax="true"
      data-callback=""
      data-action="Refresh">
    <div class="modal-body">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="NewPassword" class="control-label">رمز عبور جدید</label>
                    <input class="form-control" asp-for="NewPassword">
                    <span asp-validation-for="NewPassword" class="error"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="ReNewPassword" class="control-label">تکرار رمز عبور جدید</label>
                    <input class="form-control" asp-for="ReNewPassword">
                    <span asp-validation-for="ReNewPassword" class="error"></span>
                </div>
            </div>
        </div>
    </div>
    <input type="hidden" asp-for="Id" />
    <div class="modal-footer">
        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">بستن</button>
        <button type="submit" class="btn btn-info waves-effect waves-light">ذخیره</button>
    </div>
</form>