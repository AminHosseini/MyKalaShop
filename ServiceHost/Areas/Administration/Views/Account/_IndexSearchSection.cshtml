@using AccountManagement.Application.Contracts.Account
@model SearchAccount

<form class="form-inline" role="form" method="get">
    <div class="form-group">
        <label asp-for="FullName" class="sr-only"></label>
        <input asp-for="FullName" class="form-control" placeholder="نام">
    </div>
    <div class="form-group">
        <label asp-for="UserName" class="sr-only"></label>
        <input asp-for="UserName" class="form-control" placeholder="نام کاربری">
    </div>
    <div class="form-group">
        <label asp-for="Mobile" class="sr-only"></label>
        <input asp-for="Mobile" class="form-control" placeholder="موبایل">
    </div>
    <div class="form-group">
        <label asp-for="RoleId" class="sr-only"></label>
        <select asp-for="RoleId" class="form-control" asp-items="@ViewBag.Roles">
            <option value="0">نقش...</option>
        </select>
    </div>
    <button type="submit" class="btn btn-success waves-effect waves-light m-l-10">جستجو</button>
    <a class="btn btn-primary waves-effect waves-light m-l-10" asp-action="Index">مشاهده همه</a>
</form>