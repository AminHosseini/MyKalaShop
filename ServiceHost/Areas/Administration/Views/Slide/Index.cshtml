@using ShopManagement.Application.Contracts.Slide
@model List<SlideViewModel>

@{
    ViewData["Title"] = "مدیریت اسلایدها";
}

<div class="row">
    <div class="col-sm-12">
        <h4 class="page-title pull-right">@ViewData["Title"]</h4>
        <p class="pull-left">
            <a class="btn btn-success btn-lg" href="#showmodal=@Url.Action("Create")">ایجاد اسلاید جدید</a>
        </p>
    </div>
</div>

@if (!string.IsNullOrWhiteSpace(ViewBag.ErrorMessage))
{
    <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
}

<div class="row" id="ProductCategoriesDiv">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">لیست اسلایدها</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <table id="datatable" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>عکس</th>
                                    <th>سرتیتر</th>
                                    <th>عنوان</th>
                                    <th>تاریخ تولید</th>
                                    <th>وضعیت</th>
                                    <th>عملیات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td>
                                            <img src="~/UploadedFiles/@item.PicturePath" style="width: 70px; height: 70px" />
                                        </td>
                                        <td>@item.Heading</td>
                                        <td>@item.Title</td>
                                        <td>@item.CreationDate</td>
                                        <td>
                                            @if (item.IsDeleted)
                                            {
                                                <i class="fa fa-remove fa-2x text-danger"></i>
                                            }
                                            else
                                            {
                                                <i class="fa fa-check fa-2x text-success"></i>
                                            }
                                        </td>
                                        <td>
                                            <a class="btn btn-warning pull-right m-rl-5" href="#showmodal=@Url.Action("Edit", new { id = item.Id})">
                                                <i class="fa fa-edit"></i> ویرایش
                                            </a>
                                            @if (!item.IsDeleted)
                                            {
                                                <a class="btn btn-danger pull-right m-rl-5" asp-action="Delete" asp-route-id="@item.Id">حذف</a>
                                            }
                                            else
                                            {
                                                <a class="btn btn-success pull-right m-rl-5" asp-action="Restore" asp-route-id="@item.Id">بازگردانی</a>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>